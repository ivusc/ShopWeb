@page
@model ShopWeb.Pages.ShopCart.AddToCartModel
@{
}

<h1 align="center">Add to cart?</h1>
<br />

<div class="container col-md-8">
    <form method="post">
        <p>
            Product Name: <input type="text" class="form-control" asp-for="Cart.ProductName" value="@Model.Product.Name" readonly /><br />
            Product ID: <input type="text" asp-for="Cart.ProductID" class="form-control"
                               value="@Model.Product.ProductID" readonly /><br />
        </p>
        <div class="form-group">
            <label for="qty" class="form-label">Quantity:</label>
            <select class="custom-select mr-sm-2 col-4" id="qty" asp-for="Cart.QuantityBought">
                <option value="1" selected>Select Quantity</option>
                @for (int i = 0; i < Model.Product.StockQuantity; i++)
                {
                    <option value="@(i+1)">@(i+1)</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Add to Cart" class="btn btn-primary" /> |
            <a asp-page="/Index"class="btn-link">Back to Home</a>
        </div>
    </form>
</div>