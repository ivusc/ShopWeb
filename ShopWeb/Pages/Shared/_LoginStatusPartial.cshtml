@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Auth/Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-2 btn btn-danger">Logout</button>
    </form>
}
else
{
    <a class="btn btn-primary" asp-page="/Auth/Login">Login</a>
}
