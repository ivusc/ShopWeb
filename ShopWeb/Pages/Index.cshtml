@page
@model IndexModel
@using ShopWeb.Models
@{
    ViewData["Title"] = "Home page";
    string Photopath = null;
}

@if (Model.Message != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.Message</strong>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
             class="bi bi-x-lg" viewBox="0 0 16 16" data-dismiss="alert" style="float:right" cursor="pointer">
            <path d="M1.293 1.293a1 1 0 0 1 1.414 0L8 6.586l5.293-5.293a1 1 0 1 1 1.414 1.414L9.414 8l5.293 5.293a1 1 0 0 1-1.414 1.414L8 9.414l-5.293 5.293a1 1 0 0 1-1.414-1.414L6.586 8 1.293 2.707a1 1 0 0 1 0-1.414z" />
        </svg>
    </div>
}

<h1 align="center">Shop</h1>
<br />
<div class="container col-8">
    <form method="post">
        <div class="mb-3">
            <label asp-for="SearchString" class="form-label">Search for Products</label>
            <input type="search" class="form-control" placeholder="Search what you want" asp-for="SearchString">
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Filter Categories
            </button>
            <div class="collapse" id="collapseExample">
                <br />
                <div class="card card-body border-secondary">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Category.Appliances">
                                <label class="form-check-label" asp-for="Category.Appliances">
                                    Appliances
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Category.Clothes">
                                <label class="form-check-label" asp-for="Category.Clothes">
                                    Clothes
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Category.Electronics">
                                <label class="form-check-label" asp-for="Category.Electronics">
                                    Electronics
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Category.Food">
                                <label class="form-check-label" asp-for="Category.Food">
                                    Food
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="Category.Others">
                                <label class="form-check-label" asp-for="Category.Others">
                                    Others
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Search" /> |
            <a asp-page="Index" class="btn btn-info">View All</a>
        </div>
    </form>
    <br />
</div>

<div class="container mx-auto mt-4">
    @for (var i = 0; i <= Model.Products.Count; i += 3)
    {
        <div class="row">
            @if (i < Model.Products.Count)
            {
                Photopath = "~/Images/" + (Model.Products[i].Photopath ?? "bag.png");
                <div class="col-md-4">
                    <div class="card border-dark" style="width: 18rem;">
                        <img src="@Photopath" class="card-img-top" asp-append-version="true">
                        <div class="card-body">
                            <h3 class="card-title">@Model.Products[i].Name</h3>
                            <p class="card-text">$@Model.Products[i].Price</p>
                            <span class="badge rounded-pill bg-info text-light">@Model.Products[i].CategoryID</span><br /><br />
                            <a asp-page="Details" asp-route-Id="@Model.Products[i].ProductID" class="btn btn-primary"> Details </a> |
                            <a asp-page="ShopCart/AddToCart" asp-route-Id="@Model.Products[i].ProductID" class="btn btn-info"> Add to Cart</a>
                            @if (User.HasClaim("Seller", "true"))
                            {
                                <a asp-page="Products/Delete" class="btn btn-danger" asp-route-id="@Model.Products[i].ID">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                    </svg>
                                </a>
                            }
                        </div>
                        <div class="card-footer text-muted">@Model.Products[i].DatePosted</div>
                    </div>
                    <br /><br />
                </div>
            }
            @if (i + 1 < Model.Products.Count)
            {
                Photopath = "~/Images/" + (Model.Products[i + 1].Photopath ?? "bag.png");
                <div class="col-md-4">
                    <div class="card border-dark" style="width: 18rem;">
                        <img src="@Photopath" class="card-img-top" asp-append-version="true">
                        <div class="card-body">
                            <h3 class="card-title">@Model.Products[i + 1].Name</h3>
                            <p class="card-text">$@Model.Products[i + 1].Price</p>
                            <span class="badge rounded-pill bg-info text-light">@Model.Products[i + 1].CategoryID</span><br /><br />
                            <a asp-page="Details" asp-route-Id="@Model.Products[i+1].ProductID" class="btn btn-primary"> Details </a> |
                            <a asp-page="ShopCart/AddToCart" asp-route-Id="@Model.Products[i + 1].ProductID" class="btn btn-info"> Add to Cart</a>
                            @if (User.HasClaim("Seller", "true"))
                            {
                                <a asp-page="Products/Delete" class="btn btn-danger" asp-route-id="@Model.Products[i + 1].ID">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                    </svg>
                                </a>
                            }
                        </div>
                        <div class="card-footer text-muted">@Model.Products[i+1].DatePosted</div>
                    </div>
                    <br /><br />
                </div>
            }
            @if (i + 2 < Model.Products.Count)
            {
                Photopath = "~/Images/" + (Model.Products[i + 2].Photopath ?? "bag.png");
                <div class="col-md-4">
                    <div class="card border-dark" style="width: 18rem;">
                        <img src="@Photopath" class="card-img-top" asp-append-version="true">
                        <div class="card-body">
                            <h3 class="card-title">@Model.Products[i + 2].Name</h3>
                            <p class="card-text">$@Model.Products[i + 2].Price</p>
                            <span class="badge rounded-pill bg-info text-light">@Model.Products[i + 2].CategoryID</span><br /><br />
                            <a asp-page="Details" asp-route-Id="@Model.Products[i+2].ProductID" class="btn btn-primary"> Details </a> |
                            <a asp-page="ShopCart/AddToCart" asp-route-Id="@Model.Products[i+2].ProductID" class="btn btn-info"> Add to Cart</a>
                            @if (User.HasClaim("Seller", "true"))
                            {
                                <a asp-page="Products/Delete" class="btn btn-danger" asp-route-id="@Model.Products[i+2].ID">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                    </svg>
                                </a>
                            }
                        </div>
                        <div class="card-footer text-muted">@Model.Products[i + 2].DatePosted</div>
                    </div>
                    <br /><br />
                </div>
            }
        </div>
    }
</div>